<Window x:Class="TechHealth.View.SecretaryView.AppointmentsViewSecretary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechHealth.View.SecretaryView"
        mc:Ignorable="d"
        Title="ExaminationsViewSecretary" Height="450" Width="800">
    <Grid>
        <ListView x:Name="examinationList" Margin="64,69,64,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Start Time" Width="120" DisplayMemberBinding="{Binding StartTimeD,StringFormat=t}" />
                    <GridViewColumn Header="Finish Time" Width="120" DisplayMemberBinding="{Binding FinishTimeD,StringFormat=t}" />
                    <GridViewColumn Header="Doctor" Width="135" DisplayMemberBinding="{Binding Doctor.FullName}" />
                    <GridViewColumn Header="Patient" Width="135" DisplayMemberBinding="{Binding Patient.FullName}" />
                    <GridViewColumn Header="Room" Width="150" DisplayMemberBinding="{Binding Room.roomId}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="pickedDate" Content="date" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
