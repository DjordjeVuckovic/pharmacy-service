<Window x:Class="TechHealth.View.SecretaryView.AddGuest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TechHealth.View.SecretaryView"
        mc:Ignorable="d"
        Title="AddGuest" Height="250" Width="400">
    <Grid>
        <Label Content="Add Guest" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="56,62,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="56,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="guestUsername" HorizontalAlignment="Left" Margin="222,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="158"/>
        <TextBox x:Name="guestPassword" HorizontalAlignment="Left" Margin="222,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="158"/>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="56,171,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click_Cancel" />
        <Button x:Name="Confirm" Content="Confirm" HorizontalAlignment="Left" Margin="251,171,0,0" VerticalAlignment="Top" Width="100" Click="Button_Click_Confirm" />
    </Grid>
</Window>
